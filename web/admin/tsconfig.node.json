{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@twi/shared-state": ["../shared/src/index.ts"],
      "@twi/shared-state/*": ["../shared/src/*"]
    }
  },
  "include": ["vite.config.ts"]
}
