{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "types": ["vite/client", "vitest/globals"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "noEmit": true,
    "composite": false,
    "baseUrl": ".",
    "paths": {
      "@twi/shared-state": ["../shared/src/index.ts"],
      "@twi/shared-state/*": ["../shared/src/*"]
    }
  },
  "include": ["src"]
}
